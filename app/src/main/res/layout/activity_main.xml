<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@+id/top" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <include android:id="@+id/toolBar" layout="@layout/toolbar_layout" />
    <FrameLayout android:id="@+id/container" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/toolBar"/>
    </RelativeLayout>
    <android.support.design.widget.NavigationView android:layout_gravity="left" android:id="@+id/navigation_view" android:layout_width="wrap_content" android:layout_height="fill_parent" app:menu="@menu/navigation_drawer_menu" app:itemIconTint="@drawable/nav_drawer_item" app:itemTextColor="@drawable/nav_drawer_item">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>