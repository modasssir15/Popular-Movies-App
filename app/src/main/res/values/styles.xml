<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="mainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="SecondaryTextLime" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/lime_dark</item>
    </style>

</resources>
