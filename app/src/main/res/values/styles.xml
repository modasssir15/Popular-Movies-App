<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_default</item>
    </style>
    <style name="mainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_default</item>
    </style>
    <style name="FullHeightDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ratebutton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="GradientProgressBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="spb_stroke_width">2.0dip</item>
        <item name="spb_stroke_separator_length">0.0dip</item>
        <item name="spb_sections_count">5</item>
        <item name="spb_speed">2.0</item>
        <item name="spb_progressiveStart_speed">1.5</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_reversed">false</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_progressiveStart_activated">false</item>
        <item name="spb_gradients">true</item>
    </style>
    <style name="ImageCoverStroke">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SecondaryTextLime" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PortraitBackdrop">
        <item name="android:background">@drawable/backgroundblur</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="TextMovieDetailsDark" parent="@style/BaseTextMovieDetails">
        <item name="android:background">@color/text_view_background</item>
    </style>
    <style name="TextMovieDetailsTitleDark" parent="@style/BaseTextMovieDetailsTitle">
        <item name="android:background">@color/text_view_background</item>
    </style>
    <style name="TextMovieDetailsHeaderDark" parent="@style/BaseTextMovieDetailsHeader">
        <item name="android:background">@color/text_view_header</item>
    </style>
    <style name="BaseTextMovieDetailsTitle" parent="@style/BaseTextMovieDetails">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
    </style>
    <style name="BaseTextMovieDetailsHeader">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_marginTop">@dimen/textDetailMarginTop</item>
    </style>
    <style name="BaseTextMovieDetails">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/paddingHorizontalDetailsText</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">@dimen/paddingHorizontalDetailsText</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>
    <color name="accent_default">#ffc34b4b</color>
    <color name="actionbar_background">#ff101010</color>
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarSize">@dimen/toolbar_default_height</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_default</item>
    </style>

    <style name="AppThemeDark" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="textMovieDetails">@style/TextMovieDetailsDark</item>
        <item name="textMovieDetailsTitle">@style/TextMovieDetailsTitleDark</item>
        <item name="textMovieDetailsHeader">@style/TextMovieDetailsHeaderDark</item>
        <item name="textListEntryTitleColor">@color/white</item>
        <item name="backdropActionbarGradient">@drawable/ab_gradient</item>
        <item name="movieDetailBarBackground">@drawable/bar_gradient</item>
        <item name="imageBackgroundStroke">@drawable/image_frame_dark</item>
    </style>

</resources>
