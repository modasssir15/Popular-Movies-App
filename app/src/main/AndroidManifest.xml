<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.popularmovies">
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name=".MainActivity" android:launchMode="singleTop" android:theme="@style/mainTheme" android:configChanges="orientation|screenSize">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".DetailActivity" android:launchMode="singleTop" android:configChanges="orientation|screenSize" />

    </application>

</manifest>
